{
    "name": "Easier",
    "description": "We help enhance reading experience by stylizing text in an EASIER way!",
    "version": "0.1",
    "manifest_version": 3,
    "permissions": ["storage", "tabs", "scripting"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["./js/main.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [{
        "matches": ["<all_urls>"],
        "resources": ["action.html"]
    }]
}